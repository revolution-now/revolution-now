}

struct.drag_state_t {
  origin 'Coord',
  phase 'e_drag_phase',
}

struct.mod_keys {
  l_shf_down  'bool',
  r_shf_down  'bool',
  shf_down    'bool',
  l_alt_down  'bool',
  r_alt_down  'bool',
  alt_down    'bool',
  l_ctrl_down 'bool',
  r_ctrl_down 'bool',
  ctrl_down   'bool',
}

enum.e_mouse_button {
  l, r
}

enum.e_mouse_button_event {
  left_down,
  left_up,
  right_down,
  right_up,
}
