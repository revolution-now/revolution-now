# C++ standard library
include "<string>"

namespace "rn.config.options"

enum.e_option_category {
  units,
  war_of_independence,
}

enum.e_wagon_train_limit_mode {
  classic,
  population,
  none,
}

struct.OptionHelp {
  category 'e_option_category',
  title 'std::string',
  quick 'std::string',
  detail 'std::string',
}

struct.Values {
  enable_war_of_succession 'bool',
  ref_can_spawn_ships 'bool',
  withdraw_on_declaration 'bool',
  deadline_for_winning 'base::maybe<int>',
  wagon_train_limit_mode 'e_wagon_train_limit_mode',
}

struct.Help {
  enable_war_of_succession 'OptionHelp',
  ref_can_spawn_ships 'OptionHelp',
  withdraw_on_declaration 'OptionHelp',
  deadline_for_winning 'OptionHelp',
  wagon_train_limit_mode 'OptionHelp',
}

namespace "rn"

struct.config_options_t {
  help 'config::options::Help',
  # The default values are in a separate struct so that they can
  # be copied into the game settings easily without copying all
  # of the documentation text.
  default_values 'config::options::Values',
}

config.options {}
